<h1>Users</h1>

<table class="table table-bordered table-hover">
  <thead class="bgwhite">
    <tr>
      <th><%= sort_link "Name" %></th>
      <th><%= sort_link "Email" %></th>
    </tr>
  </thead>
<tbody class="bgwhite">
<% @users.each do |u| %>
    <tr>
      <td><%= link_to "#{u.name}", user_path(u.id) %></td>
      <td><%= u.email %></td>
    </tr>
  <% end %>
</tbody>
</table>
